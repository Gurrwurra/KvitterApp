<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_editSpecReceipt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <ScrollView
        android:layout_width="80dp"
        android:layout_height="683dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_color"
            android:textAlignment="viewStart">

            <ImageView
                android:id="@+id/img_edit_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="97dp"
                android:src="@drawable/english"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/txt_specific_name_edit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="99dp"
                android:layout_marginEnd="98dp"
                android:background="@drawable/custom_edit_text"
                android:ems="10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_specific_title" />

            <EditText
                android:id="@+id/txt_specific_supplier_edit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="99dp"
                android:layout_marginEnd="98dp"
                android:background="@drawable/custom_edit_text"
                android:ems="10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_specific_supplier_title" />

            <EditText
                android:id="@+id/txt_specific_comment_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="99dp"
                android:layout_marginEnd="98dp"
                android:background="@drawable/custom_edit_text"
                android:ems="10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_specific_note_title" />

            <EditText
                android:id="@+id/txt_specific_amount_edit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="99dp"
                android:layout_marginEnd="98dp"
                android:background="@drawable/custom_edit_text"
                android:inputType="numberDecimal"
                android:ems="10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_specific_amount-title" />

            <TextView
                android:id="@+id/txt_file_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="119dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="119dp"
                android:layout_marginBottom="20dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/btn_change_pic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_edit_image" />

            <TextView
                android:id="@+id/txt_specific_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="99dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="269dp"
                android:text="Namn"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_change_pic" />

            <TextView
                android:id="@+id/txt_specific_amount-title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="99dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="262dp"
                android:text="Belopp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_specific_name_edit" />

            <TextView
                android:id="@+id/txt_specific_supplier_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="99dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="234dp"
                android:text="Leverantör"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_specific_amount_edit" />

            <TextView
                android:id="@+id/txt_specific_folder_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="188dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="182dp"
                android:text="Mapp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_specific_comment_edit" />

            <TextView
                android:id="@+id/txt_specific_note_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="99dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="227dp"
                android:text="Kommentar"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_specific_supplier_edit" />

            <Button
                android:id="@+id/btn_save_changes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="125dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="126dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_action"
                android:drawableRight="@drawable/ic_save_black_24dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Spara ändringar"
                android:textAlignment="textStart"
                app:layout_constraintBottom_toTopOf="@+id/btn_delete_re"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spi_folder_edit" />

            <Button
                android:id="@+id/btn_delete_re"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="145dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="146dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_secondary"
                android:drawableRight="@drawable/ic_delete_black_24dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Ta bort"
                android:textAlignment="textStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_save_changes" />

            <Spinner
                android:id="@+id/spi_folder_edit"
                android:layout_width="151dp"
                android:layout_height="43dp"
                android:layout_marginStart="128dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_specific_folder_title" />

            <Button
                android:id="@+id/btn_change_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="125dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="126dp"
                android:background="@drawable/button_action"
                android:drawableRight="@drawable/ic_save_black_24dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Ändra bild/PDF"
                android:textAlignment="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_file_edit" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:id="@+id/nv">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>